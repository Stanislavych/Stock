@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewData["Title"]</title>
	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
	<style>
		.navbar-brand {
			font-size: 30px;
			font-weight: bold;
			color: #fff;
		}

		.nav-link {
			color: #fff;
		}

		.footer {
			background-color: #212529;
			color: #fff;
			position: fixed;
			left: 0;
			bottom: 0;
			width: 100%;
			padding: 10px;
			text-align: center;
		}
	</style>
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		<div class="container">
			<span class="navbar-brand">СКЛАД</span>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav ml-auto">
					<li class="nav-item">
						<a class="nav-link" asp-controller="Item" asp-action="Index">Все предметы</a>
					</li>
					@if (User.Identity.IsAuthenticated)
					{
						<li class="nav-item">
							<a class="nav-link" asp-controller="Item" asp-action="MyItems">Мои предметы</a>
						</li>
					}
					@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
					{
						<li class="nav-item">
							<a class="nav-link" asp-controller="Users" asp-action="AllUsers">Все пользователи</a>
						</li>
					}
					@if (User.Identity.IsAuthenticated)
					{
						<li class="nav-item">
							<a class="nav-link" asp-controller="Auth" asp-action="Logout">Выход</a>
						</li>
					}
					else
					{
						<li class="nav-item">
							<a class="nav-link" asp-controller="Auth" asp-action="Register">Регистрация</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-controller="Auth" asp-action="Login">Вход</a>
						</li>
					}
				</ul>
			</div>
		</div>
	</nav>

	<div class="container py-4">
		@RenderBody()
	</div>

	<footer class="footer">
		<div class="container">
			<p>Склад &copy; @DateTime.Now.Year</p>
		</div>
	</footer>

	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
