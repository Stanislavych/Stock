@using Stock.Models.Models
@model List<Item>

@{
	ViewData["Title"] = "Склад";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="d-flex align-items-center justify-content-between">
	Список предметов
	<button type="button" class="btn btn-outline-primary ml-auto" data-toggle="modal" data-target="#filterModal">
		Фильтр
	</button>
</h1>


<div class="modal fade" id="filterModal" tabindex="-1" role="dialog" aria-labelledby="filterModalLabel"
	 aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="filterModalLabel">Фильтр</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form form method="post" action="@Url.Action("FilteringItems", "Item")">
					<div class="form-group">
						<label for="name">Название</label>
						<input type="text" class="form-control" id="name" name="name" placeholder="Название">
					</div>
					<div class="form-group">
						<label for="date">Дата поступления</label>
						<input type="date" class="form-control" id="date" name="receiptDate">
					</div>
					<div class="form-group">
						<label for="manufacturer">Производитель</label>
						<input type="text" class="form-control" id="manufacturer" name="manufacturer" placeholder="Производитель">
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
						<a href="@Url.Action("Index", "Item")" class="btn btn-danger">Сбросить</a>
						<button type="submit" class="btn btn-primary">Применить</button>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>


<div class="table-responsive">
	<table class="table table-striped">
		<thead class="thead-dark">
			<tr>
				<th>Айди</th>
				<th>Название</th>
				<th>Тип предмета</th>
				<th>Дата поступления</th>
				<th>Производитель</th>
				<th>Адрес производителя</th>
				<th>Изображение</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td>@item.ItemType</td>
					<td>@item.ReceiptDate.ToString("yyyy-MM-dd")</td>
					<td>@item.Manufacturer</td>
					<td>@item.ManufacturerAddress</td>
					<td>@item.Image</td>
				</tr>
			}
		</tbody>
	</table>
</div>